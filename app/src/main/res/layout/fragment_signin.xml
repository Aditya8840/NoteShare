<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SignIn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:textSize="25sp"
        android:fontFamily="@font/inter"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="280dp"
        android:layout_height="279dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup"
        app:srcCompat="@drawable/bear" />

    <EditText
        android:id="@+id/signinmail"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:hint="Enter Your Edu mail"
        android:textColor="@color/white"
        android:inputType="textEmailAddress"
        android:background="@drawable/custom_button"
        android:textColorHint="@color/hint"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/signinpassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView"/>


    <EditText
        android:id="@+id/signinpassword"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:hint="Enter Your Password"
        android:textColor="@color/white"
        android:inputType="textEmailAddress"
        android:background="@drawable/custom_button"
        android:textColorHint="@color/hint"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/imageView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signinmail"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button"
        android:padding="10dp"
        android:paddingHorizontal="30dp"
        android:src="@drawable/arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/signinpassword"
        app:layout_constraintTop_toBottomOf="@+id/signinpassword" />
</androidx.constraintlayout.widget.ConstraintLayout>